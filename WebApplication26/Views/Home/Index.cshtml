@{
    ViewData["Title"] = "Home Page";
}
<body style="background-image: linear-gradient(black, #f8f9fa);">
<div class="text-center" >
    <h1 class="display-4" style="font-size:xx-large">Welcome</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/css/images/Administration-7217.jpeg" style="height:500px" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/css/images/student_life_se-retina.png" style="height:500px" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/css/images/GettyImages-977488078.jpg" style="height:500px" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/css/images/Attendance-Mark-Maangement-system.png" style="height:500px" alt="Fourth slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
    </body>