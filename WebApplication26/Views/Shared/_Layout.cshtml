<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication26</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .navigation {
            margin: 10px;
            font-size:large;
        }
        </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="ml-5 mr-5 ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="AdminDetails" asp-action="Index">AdminDetails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="AttendanceDetails" asp-action="Index">AttendanceDetails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="FacultyDetails" asp-action="Index">FacultyDetails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MarksDetails" asp-action="Index">MarksDetails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="StudentDetails" asp-action="Index">StudentDetails</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MstSemesters" asp-action="Index">MstSemesters</a><br/>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MstUsers" asp-action="Index">MstUser</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MstRoles" asp-action="Index">MstRoles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MstDepartments" asp-action="Index">MstDepartments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light badge badge-primary text-wrap text-uppercase h1 navigation"  asp-area="" asp-controller="MstSubjects" asp-action="Index">MstSubjects</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class=".bg-success m-5">
        <main role="main" class="p-3 mb-2 bg-info text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WebApplication26 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
